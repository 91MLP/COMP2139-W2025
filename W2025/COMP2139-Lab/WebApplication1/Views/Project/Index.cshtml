@model List<Project>
@{
    ViewBag.Title = "Projects";
    Layout="_Layout";
}

<h2>Project</h2>

@if (Model.Any())
{
    <table class="table">
        <thead>
            <th>ID</th>
            <th>Name</th>
            <th>Description</th>
        </thead>
        <tbody>
            @foreach(var project in Model){
                <tr>
                    <td>@project.ProjectId</td>
                    <td>@project.Name</td>
                    <td>@project.Description</td>
                    <!-- Render other project properties as needed -->
                </tr>
            }
        </tbody>
    </table>

}
else
{
    <p>No Project available</p>
}